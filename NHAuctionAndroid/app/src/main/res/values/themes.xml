<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/color_007eff</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_007eff</item>
        <item name="background">@color/color_007eff</item>
        <item name="android:windowBackground">@color/color_007eff</item>
        <item name="android:fontFamily">@font/font_noto_sans_medium</item>
        <item name="fontFamily">@font/font_noto_sans_medium</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="AppTheme.Auction">
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_007eff</item>
        <item name="background">@color/color_e6efff</item>
        <item name="android:windowBackground">@color/color_e6efff</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_007eff</item>
        <item name="background">@color/color_007eff</item>
        <item name="android:windowBackground">@color/color_007eff</item>
    </style>

    <style name="AppTheme.Fetch">
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="background">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="FullScreenDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>