<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="DefaultEditText">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">17dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">17dp</item>
    </style>

    <style name="CommonDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="SnackMsgDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="AuctionEntryInfoContents">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">@dimen/size_24</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AuctionEntryInfoTitle">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/color_7dbdff</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="autoSizeMaxTextSize">@dimen/size_24</item>
        <item name="autoSizeMinTextSize">@dimen/size_1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textSize">@dimen/size_24</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>
    </style>

    <style name="AuctionKeyPadNum">
        <item name="textViewBgColor">@color/color_76baff</item>
        <item name="textViewCorner">@dimen/size_3</item>
        <item name="textViewTxtColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:foreground">@drawable/fg_keypad</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/size_3</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">@dimen/size_20</item>
        <item name="android:maxLines">1</item>
        <item name="autoSizeMaxTextSize">@dimen/size_30</item>
        <item name="android:autoSizeTextType" tools:ignore="NewApi">uniform</item>
        <item name="android:autoSizeMinTextSize" tools:ignore="NewApi">@dimen/size_20</item>
        <item name="android:autoSizeMaxTextSize" tools:ignore="NewApi">@dimen/size_30</item>
    </style>

    <style name="AuctionKeyPadCancel">
        <item name="textViewBgColor">@color/color_76baff</item>
        <item name="textViewCorner">@dimen/size_3</item>
        <item name="textViewTxtColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:foreground">@drawable/fg_keypad</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/size_3</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">@dimen/size_20</item>
        <item name="android:maxLines">2</item>
        <item name="autoSizeMaxTextSize">@dimen/size_30</item>
        <item name="android:autoSizeTextType" tools:ignore="NewApi">uniform</item>
        <item name="android:autoSizeMinTextSize" tools:ignore="NewApi">@dimen/size_20</item>
        <item name="android:autoSizeMaxTextSize" tools:ignore="NewApi">@dimen/size_30</item>

    </style>

</resources>